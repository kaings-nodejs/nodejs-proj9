<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if(errMessage.length > 0) { %>
        <h3 class="login-form"><%= errMessage %></h3>
        <% } %>
        <form class="login-form" action="/signup" method="POST" novalidate> <!-- novalidate to disable the native validation. eg. type="email", etc. -->
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input type="email" name="email" id="email" 
                value="<%= prevInput.email %>" class="<%= validatorParams.find(v => v.param === 'email')? 'invalid' : '' %>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" 
                value="<%= prevInput.password %>" class="<%= validatorParams.find(v => v.param === 'password')? 'invalid' : '' %>">
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" name="confirmPassword" id="confirmPassword" 
                value="<%= prevInput.confirmPassword %>" class="<%= validatorParams.find(v => v.param === 'confirmPassword')? 'invalid' : '' %>">
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">  <!-- '_csrf' is default name, csrfToken is passed during rendering page -->
            <button class="btn" type="submit">Signup</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>